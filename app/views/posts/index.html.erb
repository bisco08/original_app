<% @post.each do |post| %>
<div class="post_main">
  <div class="post_body">
    <%= link_to post.title, class: :post_title %>
  </div>
  <div class="post_image">
    <%= link_to image_tag post.image, class: :post_image_tag %>
  </div>
  <div class="post_summary">
    <%= post.content %>
  </div>
  <div class="post_user">
    <%= link_to "by #{post.user.nickname}", class: :post_nickname %>
  </div> 
</div>
<% end %>

