<% @post.each do |post| %>
  <div class="post_main">
    <div class="post_body">
      <%= link_to post.title, class: :post_title %>
    </div>
  </div>
  <div class="post_main">
    <div class="post_image">
      <%= link_to image_tag post.image, class: :post_image_tag %>
      <ul class="more_list">
        <li>
          <%= link_to '詳細', post_path(post.id), method: :get %>
        </li>
      </ul>
    </div>
  </div>
  <div class="post_main">
    <div class="post_summary">
      <%= post.content %>
    </div>
  </div>
  <div class="post_main">
    <div class="post_user">
      <%= link_to "by #{post.user.nickname}", class: :post_nickname %>
    </div>
  </div>
<% end %> 

