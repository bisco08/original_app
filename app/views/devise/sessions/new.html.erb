<div class="session_main">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="session_field">
      <div class="registration">
        <h2>ログイン</h2>
      </div>
    </div>
    <div class="session_field">
      <%= f.label :メールアドレス, class: :session_email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: :session_email_sub %>
    </div>

    <div class="session_field">
      <%= f.label :パスワード, class: :session_password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: :session_password_sub %>
    </div>
    <% if devise_mapping.rememberable? %>
    <div class="session_field">
      <%= f.check_box :remember_me, class: :session_remember %>
      <%= f.label :remember_me, class: :session_remember %>
    </div>
    <% end %>

    <div class="session_actions">
      <%= f.submit "ログイン", class: :session_log %>
    </div>
    <div class="field">
    <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
